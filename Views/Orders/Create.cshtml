@model WebApp.Models.Order

@{
    ViewData["Title"] = "Добавление заказа";
}

<h3>Добавление заказа</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="citySender" class="control-label">Город отправителя:</label>
                <input asp-for="citySender" class="form-control" />
                <span asp-validation-for="citySender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="addressSender" class="control-label">Адрес отправителя:</label>
                <input asp-for="addressSender" class="form-control" />
                <span asp-validation-for="addressSender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cityRecipient" class="control-label">Город получателя:</label>
                <input asp-for="cityRecipient" class="form-control" />
                <span asp-validation-for="cityRecipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="addressRecipient" class="control-label">Адрес получателя:</label>
                <input asp-for="addressRecipient" class="form-control" />
                <span asp-validation-for="addressRecipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cargoWeight" class="control-label">Вес груза:</label>
                <input asp-for="cargoWeight" class="form-control" />
                <span asp-validation-for="cargoWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pickUpDate" class="control-label">Дата забора груза:</label>
                <input asp-for="pickUpDate" class="form-control" />
                <span asp-validation-for="pickUpDate" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку заказов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}