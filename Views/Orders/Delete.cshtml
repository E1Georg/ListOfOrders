@model WebApp.Models.Order

@{
    ViewData["Title"] = "Удаление";
}


<h3>Вы действительно хотите удалить данный заказ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Номер заказа</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">Город отправителя</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.citySender)
        </dd>

        <dt class="col-sm-2">Адрес отправителя</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.addressSender)
        </dd>

        <dt class="col-sm-2">Город получателя</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cityRecipient)
        </dd>

        <dt class = "col-sm-2">Адрес получателя</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.addressRecipient)
        </dd>

        <dt class="col-sm-2">Вес груза</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cargoWeight)
        </dd>

        <dt class="col-sm-2">Дата забора груза</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pickUpDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку заказов</a>
    </form>
</div>
